<%= turbo_frame_tag "reconciliation-main" do %>
  <div class="row tb-header mx-2 py-1 align-items-end mb-1">
    <div class="col-sm-2">Date</div>
    <div class="col-sm-4 text-center">Opening Balance</div>
    <div class="col-sm-4 text-center">Ending Balance</div>
    <div class="col-sm-2">
      <%# , data: { turbo_frame: "new_reconciliation" } %>
      <%= link_to new_foundation_bank_account_reconciliation_path(@foundation, @bank_account), class: "btn btn-outline-success btn-sm py-0" do %>
        <i class="bi calendar2-plus pe-1"></i>Reconcile
      <% end %>          
    </div>
  </div>

  <%= render @reconciliations %>  
<% end %>