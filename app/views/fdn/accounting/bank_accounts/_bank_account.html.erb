<%= turbo_frame_tag bank_account do %>  
  <div class="row align-items-center">
    <div class="col-sm-10">
      <div class="card border bg-success bg-opacity-10 border-success p-2 position-relative">
        <div class="row align-items-center">
          <div class="col-md-2">
            <span class="badge rounded-pill bg-success">Bank : </span>
          </div>
          <div class="col-md-4">
            <%= bank_account.full_name %>
          </div>
          <div class="col-md-2">
            <span class="badge rounded-pill bg-success">Balance : </span>
          </div>
          <div class="col-md-4">
            <%= bank_account.balance.format %>
          </div>
        </div>
        <% if bank_account.primary %>
          <span class="position-absolute top-0 start-0 translate-middle badge rounded-pill bg-success">
            <i class="bi bi-check2-circle"></i>
          </span>
        <% end %>
      </div>    
    </div>
    <div class="col-sm-2">
      <div class="btn-group">
        <%= link_to edit_foundation_bank_account_path(@foundation, bank_account), class: "btn btn-sm btn-outline-secondary" do %>
          <i class="bi bi-pencil-square pe-1"></i>
        <% end %>
        <%= button_to foundation_bank_account_path(@foundation, bank_account), method: :delete, 
              class: "btn btn-sm btn-outline-danger #{ "disabled" if bank_account.checks.size > 0 }", 
              form: {data: {turbo_confirm: 'Are you sure?'}} do %>
          <i class="bi bi-trash pe-1"></i>
        <% end %>        
      </div>
    </div>
  </div>
<% end %>