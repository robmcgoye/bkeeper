<%= turbo_frame_tag "organization-show-sub" do %>
    <ul class="nav nav-underline justify-content-center">
      <li class="nav-item">
        <%= link_to "Contributions", contributions_foundation_organization_path(@foundation, @organization), class: "nav-link active" %>
      </li>
      <li class="nav-item">
        <%= link_to "Commitments", commitments_foundation_organization_path(@foundation, @organization), class: "nav-link" %>
      </li>
    </ul>
<div class="container-fluid py-2">
  <div class="row tb-header">
    <div class="col-sm-1"><i class="bi bi-check2-circle"></i></div>
    <div class="col-sm-2">Date</div>
    <div class="col-sm-3">Check #</div>
    <div class="col-sm-3">Amount</div>
    <div class="col-sm-3">Donor</div>
  </div>
  <% @organization.contributions.each do |contribution| %>
    <div class="row">
      <div class="col-sm-1">
        <%== "<i class='bi bi-check2-circle'></i>" if contribution.check.cleared? %>
      </div>
      <div class="col-sm-2">
        <%= contribution.check.transaction_at.strftime("%m/%d/%Y") %>
      </div>
      <div class="col-sm-3">
        <%= contribution.check.check_number %>
      </div>
      <div class="col-sm-3">
        <%= contribution.check.amount.format %>
      </div>
      <div class="col-sm-3">
        <%= contribution.donor.code %>
      </div>
    </div>
    
  <% end %>
</div>
  <% end %>
