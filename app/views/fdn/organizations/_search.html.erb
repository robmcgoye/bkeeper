<%= turbo_frame_tag Organization.new do %>
  <div class="row mb-2 align-items-center">
    <div class="col-sm-7">
      <form>
        <div class="input-group">
          <input type="text" class="form-control form-control-sm" aria-describedby="button-search">
          <button class="btn btn-sm btn-outline-secondary" type="button" id="button-search">Search</button>
        </div>
      </form>
    </div>
    <div class="col-sm-2 offset-sm-3">
      <%= link_to new_foundation_organization_path(@foundation), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="bi bi-plus-circle pe-1"></i>New
      <% end %>
    </div>
  </div>
<% end %>
