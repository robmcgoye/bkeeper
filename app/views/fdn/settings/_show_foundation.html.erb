<%= turbo_frame_tag @foundation do %>
  <div class="card-body">
    <div class="row">
      <div class="col">
        <p class="card-text">
          <div class="row">
            <div class="col-sm-3">Abbr :</div>
            <div class="col"><%= @foundation.short_name %></div>
          </div>
          <div class="row">
            <div class="col-sm-3">Name :</div>
            <div class="col"><%= @foundation.long_name %></div>
          </div>
          <div class="row align-items-center">
            <div class="col-sm-3">Logo :</div>
            <div class="col"><%= image_tag(@foundation.image_logo_as_thumbnail) if @foundation.image_logo.attached? %></div>
          </div>         
          <div class="row align-items-center">
            <div class="col-sm-3">Header :</div>
            <div class="col"><%= image_tag(@foundation.image_header, style: "width:200px; height:50px") if @foundation.image_header.attached? %></div>
          </div>
         
         
        </p>
      </div>
      <div class="col-auto">
        <div class="btn-group">
          <%= link_to edit_foundation_path(@foundation), class: "btn btn-sm btn-outline-secondary text-start" do %>
            <i class="bi bi-pencil-square pe-1"></i>Edit
          <% end %>          
        </div>          
      </div>
    </div>
  </div>
<% end %>