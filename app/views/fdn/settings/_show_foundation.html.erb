<%= turbo_frame_tag @foundation do %>
  <div class="card-body">
    <div class="row">
      <div class="col">
        <p class="card-text">
          <%= @foundation.short_name %><br>
          <%= @foundation.long_name %>
        </p>
      </div>
      <div class="col-auto">
        <div class="btn-group">
          <%= link_to edit_foundation_path(@foundation), class: "btn btn-sm btn-outline-secondary text-start" do %>
            <i class="bi bi-pencil-square pe-1"></i>Edit
          <% end %>          
        </div>          
      </div>
    </div>
  </div>
<% end %>