<%= turbo_frame_tag organization_type do %>
  <div class="row my-table-row ">
    <div class="col-sm-4 px-1 pt-1 my-0 border border-secondary-subtle border-end-0 border-start-0">
      <%= organization_type.code %>
    </div>
    <div class="col-sm-6 px-1 pt-1 my-0 border border-secondary-subtle border-end-0 border-start-0">
      <%= organization_type.description %>
    </div>
    <div class="col-sm-2 px-1 my-0 text-center">
      <div class="btn-group">
        <%= link_to edit_foundation_settings_organization_type_path(@foundation.id, organization_type), class: "btn btn-sm btn-outline-secondary" do %>
          <i class="bi bi-pencil-square pe-1"></i>
        <% end %>
        <%= button_to foundation_settings_organization_type_path(@foundation.id, organization_type), method: :delete, class: "btn btn-sm btn-outline-danger", 
              form: {data: {turbo_confirm: 'Are you sure?'}} do %>
          <i class="bi bi-trash pe-1"></i>
        <% end %>         
      </div>
    </div>
  </div>
<% end %>