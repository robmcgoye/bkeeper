<%= turbo_frame_tag bank_account do %>
  <div class="row my-table-row">
    <div class="col-sm-2 px-1 pt-1 my-0 border border-secondary-subtle border-end-0 border-start-0 text-center">
      <i class="bi bi-<%= bank_account.primary ? "circle-fill text-primary" : "circle"%>"></i>
    </div>
    <div class="col-sm-6 px-1 pt-1 my-0 border border-secondary-subtle border-end-0 border-start-0">
      <%= bank_account.full_name %>
    </div>
    <div class="col-sm-2 px-1 pt-1 my-0 border border-secondary-subtle border-end-0 border-start-0">
      <%= bank_account.balance.format %>
      <%# humanized_money_with_symbol %>
    </div>
    <div class="col-sm-2 px-1 my-0 text-center">
      <div class="btn-group">
        <%= link_to edit_foundation_settings_bank_account_path(@foundation.id, bank_account), class: "btn btn-sm btn-outline-secondary" do %>
          <i class="bi bi-pencil-square pe-1"></i>
        <% end %>
        <%= button_to foundation_settings_bank_account_path(@foundation.id, bank_account), method: :delete, class: "btn btn-sm btn-outline-danger", 
              form: {data: {turbo_confirm: 'Are you sure?'}} do %>
          <i class="bi bi-trash pe-1"></i>
        <% end %>         
      </div>
    </div>
  </div>
<% end %>
