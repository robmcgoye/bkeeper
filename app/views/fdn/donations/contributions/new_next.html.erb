<%= turbo_frame_tag Contribution.new do %>
  <div class="card mb-2 border-primary">
    <div class="card-header border-primary bg-primary bg-opacity-10">
      <b>New Contribution Wizard for : </b><span class="text-primary"><%= @contribution.organization.name %></span>
    </div>
    <%= render "form", contribution: @contribution, form_url: foundation_contributions_path(@foundation), show: "-1" %>

  </div>
<% end %>


