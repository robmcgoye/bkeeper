<%= turbo_frame_tag contribution do %>
  <div class="row my-1 my-table-row align-items-center">
    <div class="col-sm-2 px-0">
      <%= contribution.register.transaction_at.strftime("%m/%d/%Y") %>
    </div>
    <div class="col-sm-2">
      <%= contribution.register.check_number %>
    </div>
    <div class="col-sm-2 pe-3 text-end">
      <%= humanized_money_with_symbol(contribution.register.amount) %>
    </div>
    <div class="col-sm-5">
      <%= contribution.organization.name %>
    </div>

    <div class="col-sm-1">
      <div class="dropstart" role="group">
        <button type="button" class="btn btn-sm btn-outline-dark my-dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-three-dots-vertical"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-dark">
          <li>
            <%= link_to foundation_contribution_path(@foundation, contribution), class: "dropdown-item" do %>
              <i class="bi bi-folder-symlink pe-1"></i>Show
            <% end %>
          </li>
          <li>
            <%= link_to edit_foundation_contribution_path(@foundation, contribution, :show => "0"), class: "dropdown-item" do %>
              <i class="bi bi-pencil-square pe-1"></i>Edit
            <% end %>
          </li>
          <li>
            <%= button_to foundation_contribution_path(@foundation, contribution), method: :delete, class: "dropdown-item", form: {data: {turbo_confirm: 'Are you sure?'}} do %>
              <i class="bi bi-trash pe-1"></i>Delete
            <% end %>          
          </li>
        </ul>
      </div>  
    </div>
  </div>
<% end %>