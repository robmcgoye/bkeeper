<%# param { organization } %>
<div class="col border-start border-warning">

  <div class="row">          
    <div class="col">
      <%= organization.contact %>
    </div>
    <div class="col">
      <span class="badge rounded-pill bg-warning">TYPE : </span>
      <%= organization.organization_type.code %>
    </div>
  </div>
  <div class="row">
    <div class="col"><hr class="my-1 text-warning"></div>
  </div>
  <div class="row">
    <div class="col">
      <%= organization.name %><br>
      <span class="my-text-small">
        <%= organization.address_1 %><br>
        <% if !organization.address_2.blank? %>
          <%= organization.address_2 %><br>
          <% end %>
        <%= "#{organization.city}, #{organization.state} #{organization.zip}" %><br>
        <%= organization.country %>
      </span>
    </div>
  </div>

</div>