<%= turbo_frame_tag commitment do %>
  <div class="row my-1 my-table-row align-items-center">

      <div class="col-sm-2"><%= commitment.start_at.strftime("%m/%d/%Y") %></div>
      <div class="col-sm-2"><%= commitment.end_at.strftime("%m/%d/%Y") %></div>
      <div class="col-sm-3">
        <%= humanized_money_with_symbol(commitment.amount) %>
        <span class="fw-medium text-primary"> X 
        <%= commitment.number_payments %></span>
      </div>
      <div class="col-sm-4"><%= commitment.organization.name %></div>
      <div class="col-sm-1 pb-1">
        <div class="dropstart" role="group">
          <button type="button" class="btn btn-sm btn-outline-dark my-dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i>
          </button>
          <ul class="dropdown-menu dropdown-menu-dark">
            <li>
              <%= link_to foundation_commitment_path(@foundation, commitment), class: "dropdown-item" do %>
                <i class="bi bi-folder-symlink pe-1"></i>Show
              <% end %>
            </li>
            <li>
              <%= link_to edit_foundation_commitment_path(@foundation, commitment, :show => "0"), class: "dropdown-item" do %>
                <i class="bi bi-pencil-square pe-1"></i>Edit
              <% end %>
            </li>
            <li>
              <%= button_to foundation_commitment_path(@foundation, commitment), method: :delete, class: "dropdown-item", form: {data: {turbo_confirm: 'Are you sure?'}} do %>
                <i class="bi bi-trash pe-1"></i>Delete
              <% end %>          
            </li>
          </ul>
        </div> 
      </div>

  </div>
<% end %>
