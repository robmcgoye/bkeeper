<div id="main_content" data-controller="pages" 
      data-pages-sbnum-value="2"
      data-pages-sidebar-outlet="#sidebar-controller">

  <div class="card">
    <div class="card-header">
      <%= render "fdn/contributions/nav" %>
    </div>

    <div class="container py-3">
      <div class="row text-center">
        <div class="col"><h5>Grants</h5></div>
      </div>

      <div class="container-fluid mt-3">
        <%= render "new_button" %> 
        <%# Table Header %>
        <div class="row tb-header pt-1">
          <div class="col-sm-1">Date</div>
          <div class="col-sm-2">Grant #</div>
          <div class="col-sm-4">Organization</div>
          <div class="col-sm-2">Donor</div>
          <div class="col-sm-2">Amount</div>
          <div class="col-sm-1"></div>
        </div>
        <%#= turbo_frame_tag "new-donor-form", src: new_foundation_settings_donor_path(@foundation) %>
        <%# Table Content %>
        <div id="grants">
          <%#= render @foundation.donors %>
        </div>
      </div>

    </div>

  </div>
  
</div>
