<%= turbo_frame_tag Grant.new do %>
  <div class="card mb-2">
    <div class="card-header">
      <div class="row">
        <div class="col">New Grant Wizard (Choose an Organization)</div>
        <div class="col-auto">[New Organization]</div>
      </div>
      
    </div>
   
    <div class="card-body pb-2">
      <div class="row">
        <div class="col">

          <%= form_tag new_foundation_grant_path(@foundation), method: :get, data: { turbo_frame: "organizations-filter" } do |f| %>
                      <div class="input-group mb-3">
            <%= text_field_tag "query", nil, placeholder: "Search ...", class: "form-control" %>
            <%= submit_tag "Filter", class: "btn btn-outline-secondary" %>
            </div>
          <% end %>

        
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= form_with url: foundation_grants_new_next_path(@foundation), method: :get do |form| %>
            <div class="container-fluid">
              <div class="row tb-header">
                <div class="col-sm-5 offset-1">Name</div>
                <div class="col-sm-4">Contact</div>
                <div class="col-sm-2">Type</div>
              </div>
              <div class="container-fluid scroll">
                <%= turbo_frame_tag "organizations-filter" do %>
                  <%= render "organizations_filter",  organizations: @organizations %>
                <% end %>
              </div>
            </div>

            <div class="card-footer">
              <div class="row">
                <div class="col text-start">
                  <%= link_to cancel_foundation_grant_path(@foundation, get_id(Grant.new)), class: "btn btn-sm btn-outline-secondary text-start" do %>
                    <i class="bi bi-x-square pe-1"></i>Cancel
                  <% end %>  
                </div>
                <div class="col text-end"> 
                  <%= button_tag class: "btn btn-sm btn-outline-secondary text-start" do %>
                    Next<i class="bi bi-arrow-right-circle ps-1"></i>
                  <% end %>
               </div>
              </div>
            </div>            
          <% end %>
        </div>
      </div>        
    </div>


  </div>
<% end %>