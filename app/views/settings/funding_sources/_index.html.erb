<div id="main_content" data-controller="pages" 
      data-pages-sbnum-value="5"
      data-pages-sidebar-outlet="#sidebar-controller">

  <div class="card">
    <div class="card-header">
      <%= render "settings/nav" %>
    </div>

    <div class="container py-3">
      <div class="row text-center">
        <div class="col"><h5>Funding Sources list</h5></div>
      </div>

      <div class="container-fluid mt-3">
       
        <%# Table Header %>
        <div class="row tb-header pt-1">
          <div class="col-sm-2">Code</div>
          <div class="col-sm-3">Short Name</div>
          <div class="col-sm-5">Full Name</div>
          <div class="col-sm-2">Actions</div>
        </div>
        <%= turbo_frame_tag "new-funding-source-form", src: new_foundation_settings_funding_source_path(@foundation) %>
        <%# Table Content %>
        <div id="funding_sources">
          <%= render @foundation.funding_sources %>
        </div>
      </div>

    </div>

  </div>
  
</div>
